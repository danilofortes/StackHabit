{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "backend/StackHabit.API/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd backend/StackHabit.API/out && ./StackHabit.API --urls http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
